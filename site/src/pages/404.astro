---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Not Found">
  <script is:inline>
    if (window.location.pathname.startsWith('/docs')) {
      window.location.replace('/docs/getting-started/overview');
    }
  </script>
  <div class="min-h-screen flex items-center justify-center">
    <div class="text-center">
      <h1 class="text-6xl font-black text-foreground/20 mb-4">404</h1>
      <p class="text-muted-foreground mb-6">Page not found.</p>
      <a href="/" class="text-sm text-primary hover:underline">Back to home</a>
    </div>
  </div>
</BaseLayout>
